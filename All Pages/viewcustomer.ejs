<head>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<title>Data from Mongo DB</title>
<style>
    .maincontainer
    {
        display: flex;
        flex-direction: column;
      
       
    }
    h1
    {
        text-align: center;
    }
   .customize
   {
    width: 80%;
    margin: auto;
   }
</style>
</head>
<body>
<div class="maincontainer">
    <div><h1>All Customer Details</h1></div>
    <div>
        <table class="table table-striped customize">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Current balance</th>
                <th scope="col">Handle</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < message.length ; i++) { %>
              <tr>
                <th scope="row"><%= i+1 %></th>
                <td><%= message[i].fullname %></td>
                <td><%= message[i].currentbalance %></td>
                <td><a href="/<%= message[i]._id%>">View Details And Transfer Money</a></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        
    </div>
</div>


